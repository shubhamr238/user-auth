<div class="mt-5">
    <div class="col-10 col-sm-8 col-md-6 col-lg-5 col-xl-4 m-auto">
      <div class="card card-body">
        <h1 class="text-center mb-3"><i class="fas fa-lock"></i> Forgot Password</h1>
        <%- include('_messages.ejs') %>
        <form action="/users/forgot-password-send-email" method="POST">
          <div class="form-group">
            <label for="email">Email</label>
            <input
              type="email"
              id="email"
              name="email"
              class="form-control"
              placeholder="Enter Email"
              required
            />
          </div>
          <button type="submit" class="btn btn-primary btn-block">Send Email</button>
        </form>
      </div>
    </div>
  </div>